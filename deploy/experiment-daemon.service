[Unit]
Description=Quantum Inspire Experiment Daemon
After=network.target

[Service]
Type=simple
User=qi
Group=qi
WorkingDirectory=/opt/quantuminspire
ExecStart=/opt/quantuminspire/.venv/bin/python agents/experiment_daemon.py --daemon --interval 300
Restart=on-failure
RestartSec=60
StandardOutput=journal
StandardError=journal

# QI auth config location
Environment=HOME=/home/qi
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
